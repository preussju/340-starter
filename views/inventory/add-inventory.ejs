<%- messages() %>

<div class="add-item-grid">
    <form id="itemForm" action="/inv/new-inventory" method="post">
        <label>All Fields are Required</label>

        <label for="classification_id">Classification:</label><br>
        <%- classificationList %>

        <label for="inv_make">Make:</label><br>
        <input type="text" id="inv_make" name="inv_make" required minlength="3"><br>
        
        <label for="inv_model">Model:</label><br>
        <input type="text" id="inv_model" name="inv_model" required minlength="3"><br>
        
        <label for="inv_description">Description:</label><br>
        <textarea type="text" id="inv_description" name="inv_description" rows="4" required></textarea><br>
        
        <label for="inv_image">Image Path:</label><br>
        <input type="url" id="inv_image" name="inv_image" required pattern="/images/vehicles/*\.(jpg|jpeg|png)$" value="/images/vehicles/no-image.png"><br>
        
        <label for="inv_thumbnail">Thumbnail Path:</label><br>
        <input type="url" id="inv_thumbnail" name="inv_thumbnail" required pattern="/images/vehicles/*\.(jpg|jpeg|png)$" value="/images/vehicles/no-image.png"><br>
        
        <label for="inv_price">Price:</label><br>
        <input type="number" id="inv_price" name="inv_price" min="0" step="0.01" required><br>

        <label for="inv_year">Year:</label><br>
        <input type="number" id="inv_year" name="inv_year" required placeholder="YYYY"><br>

        <label for="inv_miles">Miles:</label><br>
        <input type="number" id="inv_miles" name="inv_miles" min="0" step="1" required><br>

        <label for="inv_color">Color:</label><br>
        <input type="text" id="inv_color" name="inv_color" required pattern="[A-Za-z ]+" ><br>

        <input type="submit" value="REGISTER">
    </form>
</div>