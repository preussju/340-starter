<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

    <%-messages() %>

    <% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>

    <div class="form-grid">
        <form action="/account/register" method="post">
            <label>Register</label>
            <p>All fields are required</p><br>
            <label for="fname">First Name:</label><br>
            <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">
            <label for="lname">Last Name:</label><br>
            <input type="text" name="account_lastname" id="accountLastname" required value="<%= locals.account_lastname %>">
            <label for="email">Email:</label><br>
            <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address" value="<%= locals.account_email %>"><br>
            <label for="password">Password:</label><br>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
            <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <input type="submit" value="REGISTER">
        </form>
    </div>
